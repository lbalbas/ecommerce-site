generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Items {
  id          BigInt       @id @default(autoincrement())
  collection  BigInt       @unique(map: "Items_department_key")
  item        String       @db.VarChar
  price       Float?
  description String?
  stock       BigInt?
  thumbnail   String?
  collections collections  @relation(fields: [collection], references: [id], onUpdate: NoAction)
  images      images[]
  item_sizes  item_sizes[]
}

model collections {
  id          BigInt    @id @default(autoincrement())
  created_at  DateTime? @default(now()) @db.Timestamptz(6)
  name        String    @db.VarChar
  description String
  Items       Items?
}

model departments {
  id         BigInt    @id @default(autoincrement())
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  name       String?   @db.VarChar
}

model images {
  id    BigInt  @id @default(autoincrement())
  image String? @db.VarChar
  item  BigInt?
  Items Items?  @relation(fields: [item], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model item_sizes {
  id    BigInt  @id @default(autoincrement())
  size  String? @db.VarChar
  item  BigInt?
  Items Items?  @relation(fields: [item], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
