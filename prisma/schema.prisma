generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Items {
  item        String       @db.VarChar
  price       String
  description String
  stock       Int
  thumbnail   String
  id          String       @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  collection  String?      @db.Uuid
  department  String       @db.Uuid
  collections collections? @relation(fields: [collection], references: [id], onDelete: Cascade, onUpdate: NoAction)
  departments departments  @relation(fields: [department], references: [id], onUpdate: NoAction)
}

model collections {
  name        String  @db.VarChar
  description String
  id          String  @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  image       String
  Items       Items[]
}

model departments {
  name  String
  id    String  @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  image String
  Items Items[]
}

model images {
  image String? @db.VarChar
  id    String  @id @unique @db.Uuid
}

model item_sizes {
  size String? @db.VarChar
  id   String  @id @unique @db.Uuid
}
